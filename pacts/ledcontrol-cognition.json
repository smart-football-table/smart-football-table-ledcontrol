{
  "consumer": {
    "name": "ledcontrol"
  },
  "provider": {
    "name": "cognition"
  },
  "messages": [
    {
      "description": "the gameover message",
      "metaData": {
        "contentType": "application/json"
      },
      "contents": {
        "payload": "0,1,2,3",
        "topic": "game/gameover"
      },
      "providerStates": [
        {
          "name": "a game ends draw"
        }
      ],
      "matchingRules": {
        "body": {
          "$.payload": {
            "matchers": [
              {
                "match": "regex",
                "regex": "\\d+,\\d+(,\\d+)*"
              }
            ],
            "combine": "AND"
          }
        }
      }
    },
    {
      "description": "the team's new score",
      "metaData": {
        "contentType": "application/json"
      },
      "contents": {
        "payload": "2",
        "topic": "team/score/1"
      },
      "providerStates": [
        {
          "name": "a goal was shot"
        }
      ],
      "matchingRules": {
        "body": {
          "$.topic": {
            "matchers": [
              {
                "match": "regex",
                "regex": "team\\/score\\/\\d+"
              }
            ],
            "combine": "AND"
          },
          "$.payload": {
            "matchers": [
              {
                "match": "regex",
                "regex": "\\d+"
              }
            ],
            "combine": "AND"
          }
        }
      }
    },
    {
      "description": "the foul message",
      "metaData": {
        "contentType": "application/json"
      },
      "contents": {
        "payload": "",
        "topic": "game/foul"
      },
      "providerStates": [
        {
          "name": "a team fouled"
        }
      ],
      "matchingRules": {
        "body": {
          "$.payload": {
            "matchers": [
              {
                "match": "regex",
                "regex": ".*"
              }
            ],
            "combine": "AND"
          }
        }
      }
    },
    {
      "description": "the gameover message",
      "metaData": {
        "contentType": "application/json"
      },
      "contents": {
        "payload": "1",
        "topic": "game/gameover"
      },
      "providerStates": [
        {
          "name": "a team has won the game"
        }
      ],
      "matchingRules": {
        "body": {
          "$.payload": {
            "matchers": [
              {
                "match": "regex",
                "regex": "\\d+"
              }
            ],
            "combine": "AND"
          }
        }
      }
    },
    {
      "description": "the idle message",
      "metaData": {
        "contentType": "application/json"
      },
      "contents": {
        "payload": "true",
        "topic": "game/idle"
      },
      "providerStates": [
        {
          "name": "the table is idle"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "4.0.10"
    }
  }
}